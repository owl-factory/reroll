{
  "name": "lantern",
  "version": "0.5.0",
  "private": true,
  "scripts": {
    "build": "pnpm run migrate:prod && pnpm run generate && next build",
    "start": "next start",
    "dev": "pnpm run migrate && pnpm run generate && next dev",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test:e2e:all": "pnpm run test:e2e --browser all",
    "test:e2e:chromium": "pnpm run test:e2e --browser chromium",
    "test:e2e:firefox": "pnpm run test:e2e --browser firefox",
    "test:e2e:webkit": "pnpm run test:e2e --browser webkit",
    "migrate:prod": "tsx src/scripts/runMigrations.ts --latest",
    "migrate": "tsx --env-file=.env.development src/scripts/runMigrations.ts --latest",
    "migrate:up": "tsx --env-file=.env.development src/scripts/runMigrations.ts --up",
    "migrate:down": "tsx --env-file=.env.development src/scripts/runMigrations.ts --down",
    "migrate:new": "tsx src/scripts/newMigration.ts",
    "generate": "kysely-codegen --out-file ./generated/database-types.ts --camel-case --env-file=.env.development && gql.tada generate-output && graphql-codegen -c ./src/services/graphql/codegen.ts"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "dependencies": {
    "@lucia-auth/adapter-postgresql": "^2.0.2",
    "@serwist/next": "^9.0.5",
    "@serwist/precaching": "^9.0.5",
    "@serwist/sw": "^9.0.5",
    "@urql/exchange-execute": "^2.3.0",
    "@urql/next": "^1.1.1",
    "gql.tada": "^1.8.3",
    "graphql": "^16.9.0",
    "graphql-scalars": "^1.23.0",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^5.6.2",
    "kysely": "^0.27.4",
    "kysely-codegen": "^0.15.0",
    "lucia": "^2.7.6",
    "mobx": "^6.12.0",
    "mobx-react-lite": "^4.0.5",
    "next": "^14.2.5",
    "pg": "^8.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^1.14.0",
    "tailwind-variants": "^0.1.20",
    "urql": "^4.1.0"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.12.13",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.3.3",
    "@graphql-codegen/typescript": "^4.0.9",
    "@graphql-codegen/typescript-resolvers": "^4.2.1",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@playwright/test": "^1.46.1",
    "@types/jest": "^29.5.12",
    "@types/node": "20.10.5",
    "@types/pg": "^8.11.6",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.46.1",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4"
  }
}
